import (c) 'stdio.h'
import (c) 'GLFW/glfw3.h'

main int {
    glfwInit

    let window = glfwCreateWindow(800, 600, 'Hello World', null, null)

    for window.glfwWindowShouldClose != 1 {
        window.glfwSwapBuffers

        glfwPollEvents
    }

    window.glfwDestroyWindow

    glfwTerminate
}